<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include("partials/head.ejs") %>
  <title>Blog of great literary efforts</title>
</head>

<body> 
  <%- include("partials/header.ejs") %>
  
  <main class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="mb-4 text-center">
          <%= "Blog of all things seen and unseen" %>
        </h1>
      </div>
    </div>

    <% if (Array.isArray(posts) && posts.length > 0) { %>  
      <p><%= "These are your posts:" %></p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Subject Matter</th>
            <th scope="col">Title</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(post => { %>
            <tr> 
              <td><%= post.subject %></td>
              <td><a href="/post/<%= post.id %>"><%= post.title %></a></td>
              <td>
                <% try { %>
                  <%= new Date(post.createdAt).toLocaleString('en-US', {
                  month: 'short', day: 'numeric', year: 'numeric',
                  hour: '2-digit', minute: '2-digit', hour12: false
                  }); %>
                <% } catch (error) { %>
                  <span class="text-muted">Invalid date</span>
                <% } %>
              </td>
              <td>
                <a href="/edit/<%= post.id %>" class="btn btn-primary btn-sm">Edit</a>
                <form action="/delete/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure?');">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr> 
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p><%= "No posts yet Muchacho" %></p>
    <% } %>
         
    <h3><%= "Add a new Post: " %></h3>
    <a href="/new" class="btn btn-success">Click here to add a New Post</a>
  </main>

  <%- include("partials/footer.ejs") %>
  
  <!-- Scripts at the end -->
  <script src="/js/theme-toggle.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>