<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="/css/post.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <title><%= post.title %></title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main class="container">
    
      <div class="card-body post-card">
        <img src="/images/bg-masthead.jpg" class="card-img-top" alt="...">
        
        <div class="post-overlay">
          <h2 class="post-content-box card-title"><%= post.subject %></h2>
          <h2 class="post-content-box card-title"><%= post.title %></h2>
            <div class="post-content-box">
              <p class="post-content"><%= post.content %></p>
            </div>
            <!--show created date:-->
            <div class="post-content-box">
                <% try { %>
                  <%= new Date(post.createdAt).toLocaleString('en-US', {
                  month: 'short', day: 'numeric', year: 'numeric',
                  hour: '2-digit', minute: '2-digit', hour12: false
                  }); %>
                <% } catch (error) { %>
                  <span class="text-muted">Invalid date</span>
                <% } %>
            </div>
            <!-- show modified date:-->
            <div class="post-content-box">
                <% try { %>
                  <%= new Date(post.updatedAt).toLocaleString('en-US', {
                  month: 'short', day: 'numeric', year: 'numeric',
                  hour: '2-digit', minute: '2-digit', hour12: false
                  }); %>
                <% } catch (error) { %>
                  <span class="text-muted">Not modified</span>
                <% } %>
            </div>

            <a class="btn btn-primary" href="/edit/<%= post.id %>">Edit this Post</a>

            <a class="btn btn-secondary" href="/">Back Home Again</a>

        </div>
        
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
    <!-- Before closing </body> tag -->
    <script src="/js/theme-toggle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
