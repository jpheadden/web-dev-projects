<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%- include("partials/head.ejs") %>
  <title>New Post</title>
</head>

<body>
  <%- include("partials/header.ejs") %>
  <main class="container">
  <h1>Create a New Post</h1>
    <div class="card-body post-card">
       <img src="/images/demo-image-01.jpg" class="card-img-top" alt="...">
      
      <div class="editor-container post-overlay">
          <form class="editor-panel" method="POST" action="/new">
            <!-- Form fields for subject, title and content -->
            <input class="editor-field" name="subject" placeholder="Area of Interest" required><br>
            <input class="editor-field" type="text" name="title" placeholder="Title" required><br>
            <textarea class="editor-field" name="content" placeholder="Write your post here" required></textarea><br>
            <button class="btn-primary" type="submit">Save</button>
          </form>
      </div>
      <a href="/">Back Home Again</a>
  </main>
  <%- include("partials/footer.ejs") %>
  <script src="/js/theme-toggle.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
